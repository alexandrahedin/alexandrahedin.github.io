---
import listenImage from '../../assets/aIMG_1098.jpg';
import ContentSection from '../ContentSection.astro';
import VideoEmbed from '../VideoEmbed.astro';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<ContentSection
    headerImage={listenImage}
    {title}
    maxWidth='max-w-4xl'
    sectionType='listen'
>
    <VideoEmbed
        src='https://player.vimeo.com/video/829553989'
        title='Video of Alexandra Hedin singing Qual vita é questa mai… Che fiero momento (Euridice) - Orfeo ed Euridice - C W Gluck'
        variant='custom'
    />

    <VideoEmbed
        src='https://player.vimeo.com/video/830853799'
        title='Video of Alexandra Hedin singing Tanto amore segreto (Liù) - Turandot - Puccini'
        variant='custom'
    />

    <VideoEmbed
        src='https://player.vimeo.com/video/294648968'
        title='Video of Alexandra Hedin singing Je dis que rien m’épouvante (Micaëla) - Carmen - Bizet'
    />

    <VideoEmbed
        src='https://player.vimeo.com/video/240281788'
        title='Video of Alexandra Hedin singing Dove sono i bei momenti (La Contessa) - Le nozze di Figaro - Mozart'
    />
</ContentSection>