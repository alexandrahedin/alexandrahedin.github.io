---
import contactImage from '../../assets/aIMG_1882-2.jpg';
import ContentSection from '../ContentSection.astro';
import ContactItem from '../ContactItem.astro';

export interface Props {
    title: string;
    emailTitle: string;
    emailHref: string;
    emailText: string;
    phoneTitle: string;
    phoneHref: string;
    phoneText: string;
}

const { title, emailTitle, emailHref, emailText, phoneTitle, phoneHref, phoneText } = Astro.props;
---

<ContentSection
    headerImage={contactImage}
    {title}
    sectionType='contact'
    maxWidth='max-w-4xl'
>
    <dl class="grid gap-12 md:grid-cols-2 min-h-[50vh]">
        <ContactItem
            title={emailTitle}
            href={`mailto:${emailHref}`}
            content={emailText}
        />

        <ContactItem
            title={phoneTitle}
            href={`tel:${phoneHref}`}
            content={phoneText}
        />
    </dl>
</ContentSection>