---
import contactImage from '../../assets/aIMG_1882-2.jpg';
import ContentSection from '../ContentSection.astro';
import ContactItem from '../ContactItem.astro';

export interface Props {
    title: string;
    emailTitle: string;
    phoneTitle: string;
}

const { title, emailTitle, phoneTitle } = Astro.props;
---

<ContentSection
    headerImage={contactImage}
    {title}
    sectionType='contact'
    maxWidth='max-w-4xl'
>
    <dl class="grid gap-12 md:grid-cols-2 min-h-[50vh]">
        <ContactItem
            title={emailTitle}
            href='mailto:info@alexandrahedin.se'
            content='info@alexandrahedin.se'
        />

        <ContactItem
            title={phoneTitle}
            href='tel:+46706571441'
            content='+46 70 657 14 41'
        />
    </dl>
</ContentSection>