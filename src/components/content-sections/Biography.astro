---
import bioImage from '../../assets/band-06_1680.jpg';
import ContentSection from '../ContentSection.astro';
import Quotes from '../Quotes.astro';

type Quote = {
    text: string;
    author: string;
}

export interface Props {
    title: string;
    sectionId: string;
    showHeaderImage: boolean;
    quotes?: Quote[];
}

const { title, sectionId, showHeaderImage, quotes = [] } = Astro.props;

const biographyImage = showHeaderImage ? bioImage : undefined;
---

<ContentSection
    headerImage={biographyImage}
    {title}
    {sectionId}
    withHeaderTag={false}
    sectionType='biography'
>
    <slot />
    <Quotes quotes={quotes} />
</ContentSection>